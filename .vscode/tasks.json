{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "启动项目",
      "type": "shell",
      "command": "./start.sh",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "启动前端",
      "type": "shell",
      "command": "cd frontend && npm run dev",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "启动后端",
      "type": "shell",
      "command": "cd backend && python run.py",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
